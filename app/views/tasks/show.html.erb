<p>
  <strong>タイトル:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>説明:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>完了フラグ:</strong>
  <%= @task.is_done ? '完了済み' : '未完了' %>
</p>

<p>
  <strong>期日:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>担当者:</strong>
  <%= @task.assignee.email if @task.assignee %>
</p>

<p>
  <strong>作成者:</strong>
  <%= @task.user.email %>
</p>

<%= link_to '編集', edit_task_path(@task) %> |
<%= link_to '一覧に戻る', tasks_path %>

<hr/>

<h3>コメント</h3>
<%= render partial: 'comments/comment', collection: @task.comments %>
<%= render partial: 'comments/form', locals: { task: @task, comment: Comment.new } %>
